{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2018",
    "allowJs": false,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build/js/",
    "lib": ["dom", "es5", "scripthost", "es2018", "DOM.Iterable"],
    "paths": {
      "src/*": ["*"]
    }
  },
  "include": ["src/**/*.test.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["lib/**/*", ".yarn/**/*"]
}
